@page
@model BookListRazor.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-md-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-md-3">
        <a class="btn btn-info text-white" asp-page="Create">Create New Book</a>
    </div>
    <div class="col-md-3">
        <a class="btn btn-info text-white" asp-page="Upsert">Add(Upsert) New Book</a>
    </div>
    <div class="col-md-12 p-3 mt-3 border">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr>
                        <th>Name</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Action</th>

                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Author</td>
                            <td>@item.ISBN</td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure to delete this?' )" class="btn btn-danger btn-sm text-white">Delete</button>
                                <a class="btn btn-warning btn-sm text-white" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </table>

            }
            else
            {
                <p>No Books Available</p>
            }
        </form>
    </div>

    <div class="col-md-12" style="text-align: center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/bookList.js"></script>
}
